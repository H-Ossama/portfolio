/* ================================
   GLOBAL STYLES AND VARIABLES 
================================ */
:root {
    --primary-gold: #d4af37;
    --primary-black: #0d0d0d;
    --secondary-gold: #c5a572;
    --text-white: #ffffff;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Arial', sans-serif;
}

html {
    scroll-behavior: smooth;
}

body {
    background-color: var(--primary-black);
    color: var(--text-white);
    line-height: 1.6;
    overflow-x: hidden;
    position: relative;
    cursor: url('../assets/images/cursur-default.png'), auto;
}

/* ================================
   COMMON COMPONENTS (USED ACROSS PAGES)
================================ */
/* Navigation Styles */
nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 5%;
    background: rgba(13, 13, 13, 0.95);
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
    backdrop-filter: blur(10px);
}

.logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary-gold);
    text-decoration: none;
    position: relative;
}

.logo::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -5px;
    left: 0;
    background-color: var(--primary-gold);
    transition: width 0.3s ease;
}

.logo:hover::after {
    width: 100%;
}

nav ul {
    display: flex;
    list-style: none;
    gap: 2rem;
}

nav ul li a {
    color: var(--text-white);
    text-decoration: none;
    padding: 0.5rem 1rem;
    position: relative;
    transition: color 0.3s ease;
}

nav ul li a::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -2px;
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--primary-gold);
    transition: width 0.3s ease;
}

nav ul li a:hover::after,
nav ul li a.active::after {
    width: 100%;
}

nav ul li a:hover {
    color: var(--primary-gold);
}

/* ================================
   INDEX PAGE STYLES 
================================ */
/* Hero Section */
.hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6rem 2rem;
    position: relative;
    margin-top: 80px; /* Added to account for fixed nav */
    cursor: url('../assets/images/cursur-default.png'), auto;
}

.hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(circle at 10% 10%, rgba(212, 175, 55, 0.1), transparent 40%),
        radial-gradient(circle at 90% 90%, rgba(212, 175, 55, 0.05), transparent 40%);
    pointer-events: none;
}

.hero-container {
    max-width: 1400px;
    width: 100%;
    display: grid;
    grid-template-columns: minmax(300px, 1fr) minmax(400px, 1.5fr);
    gap: 4rem;
    align-items: center;
    position: relative;
    z-index: 1;
}

/* Profile Section */
.hero-profile {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
}

.profile-frame {
    position: relative;
    width: 300px;
    height: 300px;
    border-radius: 30px;
    overflow: hidden;
    transform: perspective(1000px) rotateY(-5deg);
    transition: transform 0.5s ease;
}

.profile-frame:hover {
    transform: perspective(1000px) rotateY(0deg);
}

/* Profile Image - Correct path and styling */
.profile-image {
    width: 100%;
    height: auto;
    border-radius: 50%;
    border: 3px solid var(--primary-gold);
}

.profile-backdrop {
    position: absolute;
    top: 10px;
    left: 10px;
    width: 100%;
    height: 100%;
    background: var(--primary-gold);
    border-radius: 30px;
    z-index: -1;
    opacity: 0.3;
}

/* Social Links */
.social-links {
    display: flex;
    gap: 1.5rem;
    margin-top: 1rem;
}

.social-icon {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    background: rgba(212, 175, 55, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-gold);
    font-size: 1.2rem;
    transition: all 0.3s ease;
}

.social-icon:hover {
    background: var(--primary-gold);
    color: var(--primary-black);
    transform: translateY(-3px);
}

/* Content Section */
.hero-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.hero-header {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.greeting {
    font-size: 1.2rem;
    color: var(--primary-gold);
    font-weight: 500;
}

.name {
    font-size: 4rem;
    font-weight: 700;
    background: linear-gradient(to right, #ffffff, var(--primary-gold));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    -webkit-text-fill-color: transparent;
    margin: 0.5rem 0;
}

.title-container {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 1.1rem;
}

.separator {
    width: 2px;
    height: 20px;
    background: var(--primary-gold);
    display: inline-block;
}

.hero-description {
    font-size: 1.1rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.9);
    max-width: 600px;
}

/* CTA Buttons */
.cta-container {
    display: flex;
    gap: 1rem;
    margin-top: 0.25rem; /* Decreased margin to move buttons up */
}

.contact-btn {
    padding: 1rem 2rem;
    border-radius: 30px;
    font-size: 1rem;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 0.8rem;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
    cursor: url('../assets/images/cursur-pointer.png'), pointer;
}

.contact-btn.primary {
    background: var(--primary-gold);
    color: var (--primary-black);
}

.contact-btn.secondary {
    background: transparent;
    color: var(--primary-gold);
    border: 2px solid var(--primary-gold);
}

.contact-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
}

.contact-btn.secondary:hover {
    background: rgba(212, 175, 55, 0.1);
}

/* Animation for profile image */
@keyframes profileFloat {
    0%, 100% {
        transform: translateY(0) perspective(1000px) rotateY(-5deg);
    }
    50% {
        transform: translateY(-10px) perspective(1000px) rotateY(-5deg);
    }
}

.profile-frame {
    animation: profileFloat 4s ease-in-out infinite;
}

.hero-content h1 {
    font-size: 3.5rem;
    color: var(--primary-gold);
    margin-bottom: 1rem;
}

.hero-content p {
    font-size: 1.5rem;
    margin-bottom: 2rem;
}

.tech-stack {
    margin-top: 2rem;
}

.tech-stack i {
    font-size: 2.5rem;
    margin: 0 1rem;
    color: var(--secondary-gold);
    transition: all 0.3s ease;
}

.tech-stack i:hover {
    color: var(--primary-gold);
    transform: scale(1.1);
}

/* New Animations and Styles */
.logo-text {
    position: relative;
}

.logo-underline {
    width: 0;
    height: 2px;
    background: var(--primary-gold);
    position: absolute;
    bottom: -5px;
    left: 0;
    transition: width 0.3s ease;
}

.logo:hover .logo-underline {
    width: 100%;
}

/* Theme Toggle */
.theme-toggle {
    cursor: pointer;
    font-size: 1.2rem;
    color: var(--primary-gold);
    transition: transform 0.3s ease;
}

.theme-toggle:hover {
    transform: rotate(180deg);
}

/* Typing Animation */
.typing-text::after {
    content: '|';
    animation: blink 1s infinite;
}

@keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
}

/* Scroll Indicator */
.scroll-indicator {
    position: absolute;
    bottom: 4rem; /* Increased bottom margin to avoid overlap */
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
}

.mouse {
    width: 30px;
    height: 50px;
    border: 2px solid var(--primary-gold);
    border-radius: 15px;
    margin: 0 auto 1rem;
    position: relative;
}

.mouse::before {
    content: '';
    width: 4px;
    height: 8px;
    background: var(--primary-gold);
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 8px;
    border-radius: 2px;
    animation: scroll 1.5s infinite;
}

@keyframes scroll {
    0% { transform: translateX(-50%) translateY(0); opacity: 1; }
    100% { transform: translateX(-50%) translateY(20px); opacity: 0; }
}

/* About Section */
.about {
    padding: 6rem 0;
    background: linear-gradient(135deg, rgba(13, 13, 13, 0.95) 0%, rgba(0, 0, 0, 0.98) 100%);
    position: relative;
    overflow: hidden;
    cursor: url('../assets/images/cursur-default.png'), auto;
}

.about::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: radial-gradient(circle at 50% 50%, rgba(212, 175, 55, 0.1) 0%, transparent 50%);
    animation: pulse 4s infinite;
}

.about-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    padding: 0 2rem;
}

/* Left Side - Image */
.about-image-container {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.image-hex {
    width: 300px;
    height: 300px;
    position: relative;
    overflow: hidden;
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    transition: transform 0.5s ease;
}

.image-hex:hover {
    transform: scale(1.05);
}

.image-hex img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.image-hex:hover img {
    transform: scale(1.1);
}

.floating-icons {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

.floating-icons i {
    position: absolute;
    color: var(--primary-gold);
    opacity: 0.8;
    animation: float 3s infinite;
}

.floating-icons i:nth-child(1) { top: 20%; left: 0; animation-delay: 0s; }
.floating-icons i:nth-child(2) { top: 80%; left: 20%; animation-delay: 0.5s; }
.floating-icons i:nth-child(3) { top: 40%; right: 10%; animation-delay: 1s; }
.floating-icons i:nth-child(4) { top: 10%; right: 20%; animation-delay: 1.5s; }

/* Right Side - Content */
.section-title {
    margin-bottom: 2rem;
}

.glowing-text {
    color: var(--primary-gold);
    font-size: 2.5rem;
    position: relative;
    display: inline-block;
    text-shadow: 0 0 10px rgba(212, 175, 55, 0.5);
    animation: glow 2s infinite;
}

.title-underline {
    width: 0;
    height: 3px;
    background: var(--primary-gold);
    margin-top: 0.5rem;
    animation: lineGrow 1s forwards;
}

.about-text {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #fff;
    margin-bottom: 2rem;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s forwards;
}

.experience-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    margin: 2rem 0;
}

.exp-item {
    background: rgba(255, 255, 255, 0.05);
    padding: 1.5rem;
    border-radius: 10px;
    text-align: center;
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease;
}

.exp-item:hover {
    transform: translateY(-5px);
}

.exp-number {
    font-size: 2.5rem;
    color: var(--primary-gold);
    font-weight: bold;
    margin-bottom: 0.5rem;
}

.exp-label {
    color: #fff;
    font-size: 1.1rem;
}

.exp-progress {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 3px;
    background: var(--primary-gold);
    width: 0;
    animation: progressGrow 1.5s ease-out forwards;
}

.about-cta {
    display: flex;
    gap: 1.5rem;
    margin-top: 2.5rem;
}

.cta-button {
    padding: 1rem 2rem;
    border-radius: 30px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
}

.download-btn {
    background: var(--primary-gold);
    color: var(--primary-black);
}

.view-btn {
    background: transparent;
    color: var(--primary-gold);
    border: 2px solid var(--primary-gold);
}

.cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(212, 175, 55, 0.3);
}

/* Animations */
@keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(5deg); }
}

@keyframes glow {
    0%, 100% { text-shadow: 0 0 10px rgba(212, 175, 55, 0.5); }
    50% { text-shadow: 0 0 20px rgba(212, 175, 55, 0.8); }
}

@keyframes lineGrow {
    0% { width: 0; }
    100% { width: 100px; }
}

@keyframes fadeInUp {
    0% { opacity: 0; transform: translateY(20px); }
    100% { opacity: 1; transform: translateY(0); }
}

@keyframes progressGrow {
    0% { width: 0; }
    100% { width: 100%; }
}

@keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 0.5; }
    50% { transform: scale(1.1); opacity: 0.7; }
}

/* Projects Section */
.projects {
    padding: 5rem 10%;
    background: linear-gradient(to top, var(--primary-black), #000);
    cursor: url('../assets/images/cursur-default.png'), auto;
}

.projects h2 {
    text-align: center;
    color: var(--primary-gold);
    margin-bottom: 3rem;
}

.project-grid {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2.5rem;
    padding: 2rem;
}

.project-card {
    flex-basis: calc(50% - 2.5rem);
    max-width: 500px;
    background: linear-gradient(145deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.1));
    border-radius: 15px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    overflow: hidden;
    transition: all 0.4s ease;
}

.project-card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 10px 20px rgba(212, 175, 55, 0.2);
}

.project-image {
    position: relative;
    height: 200px;
    overflow: hidden;
}
.project-image::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 30%;
    background: linear-gradient(to top, rgba(13, 13, 13, 1), transparent);
}

.project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.project-card:hover .project-image img {
    transform: scale(1.1);
}

.project-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.project-card:hover .project-overlay {
    opacity: 1;
}

.project-tech span {
    background: var(--primary-gold);
    color: var(--primary-black);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    margin: 0.5rem;
    font-size: 0.8rem;
}

.project-info {
    position: relative;;
    padding: 1.5rem;
}

.project-info h3 {
    color: var(--primary-gold);
    font-size: 1.4rem;
    margin-bottom: 0.8rem;
}
.project-info p {
    color: #ffffff;
    font-size: 0.9rem;
    line-height: 1.6;
    margin-bottom: 1.2rem;
}
.project-links {
    display: flex;
    gap: 1rem;
}

.project-links a {
    padding: 0.6rem 1.2rem;
    border-radius: 25px;
    font-size: 0.9rem;
    transition: all 0.3s ease;
}

.btn-github {
    background: #333;
    color: white;
}

.btn-live {
    background: var(--primary-gold);
    color: var(--primary-black);
}

/* Technologies Section */
.technologies {
    padding: 6rem 0;
    background: linear-gradient(135deg, rgba(13, 13, 13, 0.97) 0%, rgba(0, 0, 0, 0.95) 100%);
    position: relative;
    overflow: hidden;
    cursor: url('../assets/images/cursur-default.png'), auto;
}

.technologies::before {
    content: '';
    position: absolute;
    width: 200%;
    height: 200%;
    top: -50%;
    left: -50%;
    background: radial-gradient(circle at center, rgba(212, 175, 55, 0.1) 0%, transparent 25%);
    animation: rotate 20s linear infinite;
}

.tech-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
}

.section-header {
    text-align: center;
    margin-bottom: 4rem;
}

.section-title {
    color: var(--primary-gold);
    font-size: 2.5rem;
    margin-bottom: 1rem;
    position: relative;
    display: inline-block;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    background: var(--primary-gold);
    border-radius: 2px;
}

.section-subtitle {
    color: #fff;
    font-size: 1.1rem;
    opacity: 0.8;
}

.tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
}

.tech-category {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 15px;
    padding: 2rem;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: transform 0.3s ease;
}

.tech-category:hover {
    transform: translateY(-5px);
}

.category-title {
    color: var(--primary-gold);
    font-size: 1.5rem;
    margin-bottom: 2rem;
    text-align: center;
    position: relative;
}

.category-title::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: 2px;
    background: var(--primary-gold);
}

.tech-items {
    display: grid;
    gap: 2rem;
}

.tech-item {
    background: rgba(255, 255, 255, 0.03);
    border-radius: 10px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.tech-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.05), transparent);
    transform: translateX(-100%);
    transition: transform 0.6s ease;
}

.tech-item:hover::before {
    transform: translateX(100%);
}

.tech-icon-wrapper {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
}

.tech-icon-wrapper i {
    font-size: 2rem;
    color: var(--primary-gold);
    transition: transform 0.3s ease;
}

.tech-item:hover .tech-icon-wrapper i {
    transform: scale(1.1);
}

.skill-level {
    flex: 1;
    height: 6px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
    overflow: hidden;
}

.skill-bar {
    height: 100%;
    background: var(--primary-gold);
    border-radius: 3px;
    width: var(--skill-level);
    transform-origin: left;
    animation: skillGrow 1.5s ease-out forwards;
}

.tech-details {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.tech-details h4 {
    color: #fff;
    font-size: 1.1rem;
    margin: 0;
}

.tech-level {
    color: var(--primary-gold);
    font-size: 0.9rem;
    font-weight: 500;
}

/* Animations */
@keyframes rotate {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

@keyframes skillGrow {
    0% { transform: scaleX(0); }
    100% { transform: scaleX(1); }
}

/* Education Section */
.education {
    padding: 8rem 0;
    background: linear-gradient(to bottom right, #0f0f0f, #1a1a1a);
    position: relative;
    cursor: url('../assets/images/cursur-default.png'), auto;
}

.education::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(circle at 20% 30%, rgba(41, 98, 255, 0.03) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(255, 215, 0, 0.03) 0%, transparent 50%);
}

.education-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
}

.section-header {
    text-align: center;
    margin-bottom: 6rem;
}

.section-title {
    font-size: 3rem;
    color: #fff;
    margin-bottom: 1rem;
    background: linear-gradient(to right, #fff, #ffd700);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.section-subtitle {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.1rem;
}

.education-timeline {
    position: relative;
    padding: 2rem 0;
}

.education-timeline::before {
    content: '';
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 2px;
    height: 100%;
    background: linear-gradient(to bottom, transparent, #ffd700, transparent);
}

.edu-card {
    width: 100%;
    max-width: 900px;
    margin: 0 auto 4rem;
    position: relative;
}

.edu-card-inner {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 20px;
    padding: 2rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

